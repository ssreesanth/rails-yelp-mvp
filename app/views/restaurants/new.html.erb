<h2>Add a new Restaurant</h2>


<%= simple_form_for(@restaurant) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.select :category, options_for_select(["chinese", "italian", "japanese", "french", "belgian"]), {}, class: 'form-control' %>
    <%= f.input :address %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>


<div>
  <%= link_to "All Restaurants", restaurants_path %>
</div>
