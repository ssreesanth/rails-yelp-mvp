<h2><%= @restaurant.name %></h2>

<div class="mt-4">
  <h4><%=  %></h4>
  <h4>Cusine --- <%= @restaurant.category.capitalize %></h4>
  <h4>Location --- <%= @restaurant.address.capitalize %></h4>
</div>



<h5>Restaurant Review</h5>

<div class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item">
            <small>
              <% count = 0 %>
              <% 5.times do %>
                <% if review.rating > count %>
                  <i class="fa-solid fa-star"></i>
                <% else %>
                  <i class="fa-regular fa-star"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
            <p><%= review.content %></p>
          </li>
        <% end %>
      </div>



<div>
  <%= link_to "All Restaurants", restaurants_path %>
</div>

<div>
  <%= link_to "Write a Review", new_restaurant_review_path(@restaurant) %>
</div>
